<h1> All Tasks</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>
        {{#if this.done}}
            <a href="/" class="title done"> {{this.title}}</a>
        {{else}}
            <a href="/" class="title"> {{this.title}}</a>

        {{/if}}

        
        <div class="actions">
            <form action="/tasks/updatestatus" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="done" value="{{this.done}}">

                <button type="Submit">
                    <i class="bi bi-check2"></i>
                </button>

            </form>
            <a href="/tasks/edit/{{this.id}}" class="bi bi-pencil-square"></a>

            <form action="/tasks/remove" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="Submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>

        </div>
    </li>
    {{/each}}
</ul>